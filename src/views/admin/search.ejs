<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Admin RAG Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/admin/dashboard">
                <i class="fas fa-robot me-2"></i>Admin RAG Portal
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/admin/dashboard">Dashboard</a>
                <a class="nav-link" href="/admin/upload">Upload</a>
                <a class="nav-link active" href="/admin/search">Search</a>
                <form action="/admin/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Flash Messages -->
        <% if (typeof messages !== 'undefined' && messages.error && messages.error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= messages.error[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (typeof messages !== 'undefined' && messages.success && messages.success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages.success[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Search Form -->
        <div class="row justify-content-center mb-4">
            <div class="col-md-10 col-lg-8">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-search me-2"></i>Search Documents
                        </h3>
                    </div>
                    <div class="card-body">
                        <form action="/admin/search" method="POST">
                            <div class="mb-3">
                                <label for="query" class="form-label">
                                    <i class="fas fa-question-circle me-2"></i>Ask a question
                                </label>
                                <textarea class="form-control form-control-lg" 
                                          id="query" 
                                          name="query" 
                                          rows="3" 
                                          placeholder="What would you like to know from the uploaded documents?"
                                          required><%= query || '' %></textarea>
                                <div class="form-text">
                                    <i class="fas fa-lightbulb me-1"></i>
                                    Try asking specific questions about the content in your uploaded documents.
                                </div>
                            </div>
                            
                            <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-search me-2"></i>Search Documents
                                </button>
                                <a href="/admin/dashboard" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Results -->
        <% if (results) { %>
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-list me-2"></i>Search Results
                                <span class="badge bg-primary ms-2"><%= results.sources ? results.sources.length : 0 %></span>
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- AI Response -->
                            <div class="alert alert-info">
                                <h6 class="alert-heading">
                                    <i class="fas fa-robot me-2"></i>AI Response:
                                </h6>
                                <p class="mb-0"><%= results.response %></p>
                            </div>

                            <!-- Query Information -->
                            <div class="mb-3">
                                <strong>Query:</strong> "<%= results.query %>"<br>
                                <strong>Total Documents Searched:</strong> <%= results.totalDocuments %>
                            </div>

                            <!-- Source Documents -->
                            <% if (results.sources && results.sources.length > 0) { %>
                                <h6>Source Documents:</h6>
                                <% results.sources.forEach(function(source, index) { %>
                                    <div class="card mb-3 border-start border-success border-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="card-title mb-0">
                                                    <i class="fas fa-file-alt me-2 text-success"></i>
                                                    <%= source.documentName %>
                                                </h6>
                                                <span class="badge bg-success">
                                                    Relevance: <%= source.relevanceScore %>
                                                </span>
                                            </div>
                                            <p class="card-text">
                                                <%= source.content %>
                                            </p>
                                            <small class="text-muted">
                                                <i class="fas fa-layer-group me-1"></i>
                                                Chunk <%= source.chunkIndex + 1 %>
                                            </small>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    No relevant documents found for your query.
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Search Tips -->
        <% if (!results) { %>
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-lightbulb me-2"></i>Search Tips
                            </h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    Ask specific questions about the content in your documents
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    Use keywords that might appear in your documents
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    Try both general and detailed queries
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-info-circle text-info me-2"></i>
                                    The system will find the most relevant document sections
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>