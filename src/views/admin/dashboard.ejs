<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Admin RAG Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/admin/dashboard">
                <i class="fas fa-robot me-2"></i>Admin RAG Portal
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link active" href="/admin/dashboard">Dashboard</a>
                <a class="nav-link" href="/admin/upload">Upload</a>
                <a class="nav-link" href="/admin/search">Search</a>
                <form action="/admin/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Flash Messages -->
        <% if (typeof messages !== 'undefined' && messages.error && messages.error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= messages.error[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (typeof messages !== 'undefined' && messages.success && messages.success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages.success[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Welcome Header -->
        <div class="row mb-4">
            <div class="col">
                <h1>Welcome, admin!</h1>
                <div class="d-flex gap-2">
                    <a href="/admin/upload" class="btn btn-primary">
                        <i class="fas fa-cloud-upload-alt me-2"></i>Upload Document
                    </a>
                    <a href="/admin/search" class="btn btn-success">
                        <i class="fas fa-search me-2"></i>Search Documents
                    </a>
                    <form action="/admin/logout" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="card-title"><%= documents.length %></h3>
                                <p class="card-text">Total Documents</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-file-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">RAG System</h5>
                                <p class="card-text">Active</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-brain fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Storage</h5>
                                <p class="card-text">Available</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-database fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Documents List -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-files me-2"></i>Uploaded Documents
                </h5>
            </div>
            <div class="card-body">
                <% if (documents && documents.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Filename</th>
                                    <th>Processed At</th>
                                    <th>Status</th>
                                    <th>Chunks</th>
                                    <th>Size</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% documents.forEach(function(doc) { %>
                                    <tr>
                                        <td>
                                            <i class="fas fa-file me-2"></i>
                                            <%= doc.filename %>
                                        </td>
                                        <td><%= new Date(doc.processedAt).toLocaleString() %></td>
                                        <td>
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i><%= doc.status %>
                                            </span>
                                        </td>
                                        <td><%= doc.chunksCount %> chunks</td>
                                        <td><%= Math.round(doc.textLength / 1024) %> KB</td>
                                        <td>
                                            <form action="/admin/document/<%= doc.id %>" method="POST" class="d-inline" 
                                                  onsubmit="return confirm('Are you sure you want to delete this document?')">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-file-upload fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No documents uploaded yet.</h5>
                        <p class="text-muted mb-4">Start by uploading your first document to enable RAG search.</p>
                        <a href="/admin/upload" class="btn btn-primary">
                            <i class="fas fa-cloud-upload-alt me-2"></i>Upload Your First Document
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>